{
  "name": "sound-check-app",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev -p 8888 -H --host",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview -p 8888 -H --host",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "jest src --config ./jest.config.cjs",
    "test:watch": "npm run test -- --watch",
    "cypress:open": "cypress open"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  },
  "devDependencies": {
    "@beyonk/svelte-mapbox": "^8.1.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/howler": "^2.2.4",
    "@types/jest": "^27.0.3",
    "@types/wavesurfer.js": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.4.2",
    "chance": "^1.1.8",
    "cypress": "^9.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "jest": "^27.4.3",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.9.4",
    "tailwindcss": "^2.2.17",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "type": "module",
  "dependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@lottiefiles/svelte-lottie-player": "^0.2.0",
    "@sveltejs/adapter-node": "^1.0.0-next.55",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "animate.css": "^4.1.1",
    "dotenv": "^10.0.0",
    "firebase": "^9.1.3",
    "wavesurfer.js": "^5.2.0"
  }
}
